<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">


    <android.support.v7.widget.CardView
        android:id="@+id/masaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/leyzer"
        android:layout_alignStart="@+id/zibayi"
        android:layout_below="@+id/zibayi"
        android:layout_marginRight="4dp"
        app2:cardBackgroundColor="@color/colorbackground"
        app2:cardCornerRadius="4dp"
        app2:cardElevation="4dp"
        app2:contentPadding="4dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app2:srcCompat="@drawable/image" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/zibayi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/leyzer"
        android:layout_marginLeft="198dp"
        android:layout_marginRight="4dp"
        android:layout_weight="0.64"
        app2:cardBackgroundColor="@color/colorbackground"
        app2:cardCornerRadius="4dp"
        app2:cardElevation="4dp"
        app2:contentPadding="4dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/zibayi"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            app2:srcCompat="@drawable/zzz" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/leyzer"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app2:cardBackgroundColor="@color/colorbackground"
        app2:cardCornerRadius="4dp"
        app2:cardElevation="4dp"
        app2:contentPadding="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:background="@color/colorButton1"
            android:scaleType="fitXY"
            app2:srcCompat="@drawable/laser" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fitness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="340dp"
        app2:cardBackgroundColor="@color/colorbackground"
        app2:cardCornerRadius="4dp"
        app2:cardElevation="4dp"
        app2:contentPadding="4dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="373dp"
            android:layout_height="216dp"
            android:scaleType="fitXY"
            app2:srcCompat="@drawable/endermologie" />

    </android.support.v7.widget.CardView>

</RelativeLayout>